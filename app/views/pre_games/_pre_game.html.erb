<div id="game">
  <%= link_to game.get_users, game_investor_path(game_id: game.id, id: investor.id) %>
  <% if !game.users.include?(current_user) || new %>
    <%= link_to "Join", pre_game_path(game), method: :put, class: "toggle-game join" %>
  <% else %>
    <%= link_to "Leave", pre_game_path(game), method: :put, class: "toggle-game leave" %>
  <% end %>
</div>
